<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.usc.zsurani.grubmate.CreatePostActivity"
    android:orientation="vertical"
    android:layout_margin="12dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Name: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post Description: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Num Available Servings: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_max_requests"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Time Begin: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_begin_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Time End: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_end_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="datetime"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pickup Location: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Categories: "
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioButton"
                    android:layout_width="176dp"
                    android:layout_height="wrap_content"
                    android:text="Homemade" />

                <RadioButton
                    android:id="@+id/radioButton2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Restaurant" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="American" />

                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Mexican" />

                <CheckBox
                    android:id="@+id/checkBox3"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Fast Food" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox4"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Burger" />

                <CheckBox
                    android:id="@+id/checkBox5"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Pizza" />

                <CheckBox
                    android:id="@+id/checkBox6"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Asian" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox7"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Coffee" />

                <CheckBox
                    android:id="@+id/checkBox8"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Italian" />

                <CheckBox
                    android:id="@+id/checkBox9"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Sandwich" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox10"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Sushi" />

                <CheckBox
                    android:id="@+id/checkBox11"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Breakfast Food" />

                <CheckBox
                    android:id="@+id/checkBox12"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Dessert" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox13"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Bakery" />

                <CheckBox
                    android:id="@+id/checkBox14"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Boba" />

                <CheckBox
                    android:id="@+id/checkBox15"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Thai" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox16"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="Indian" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tags: "
                android:textSize="18dp" />

            <EditText
                android:id="@+id/edit_post_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Separate by commas"
                android:textSize="18dp" />


            <Button
                android:id="@+id/button_save_new_post"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:textSize="18sp" />


            <!-- TODO add categories, images, groups -->

        </LinearLayout>
    </ScrollView>


</LinearLayout>
