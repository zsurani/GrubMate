<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.usc.zsurani.grubmate.SortActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="347dp"
        android:layout_height="42dp"
        android:textSize="25sp"
        android:text="Sort By"
        tools:layout_editor_absoluteY="38dp"
        tools:layout_editor_absoluteX="16dp" />

    <CheckBox
        android:id="@+id/rating_sort"
        android:layout_width="348dp"
        android:layout_height="35dp"
        android:text="Rating of Provider"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="88dp" />

    <CheckBox
        android:id="@+id/popularity_sort"
        android:layout_width="348dp"
        android:layout_height="33dp"
        android:text="Popularity of Provider"
        tools:layout_editor_absoluteY="136dp"
        tools:layout_editor_absoluteX="18dp" />

    <CheckBox
        android:id="@+id/distance_sort"
        android:layout_width="349dp"
        android:layout_height="30dp"
        android:text="Distance from Current Location"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="184dp" />

    <CheckBox
        android:id="@+id/time_sort"
        android:layout_width="349dp"
        android:layout_height="31dp"
        android:text="Most Upcoming Post"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="227dp" />

    <Button
        android:id="@+id/button_savesort"
        android:layout_width="349dp"
        android:layout_height="44dp"
        android:text="Sort"
        tools:layout_editor_absoluteX="18dp"
        tools:layout_editor_absoluteY="281dp" />
</LinearLayout>